generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  EASY
  NORMAL
  HARD
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  songs SongCategory[]
}

model Song {
  id            String         @id @default(uuid())
  title         String
  youtubeId     String         @unique
  duration      Int
  difficulty    Difficulty     @default(NORMAL)
  countryOrigin String         @default("international") // e.g., "polish", "english", etc.
  releaseYear   Int
  createdAt     DateTime       @default(now())
  artists       String[]
  categories    SongCategory[]
}


model SongCategory {
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId     String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  @@id([songId, categoryId])
}

