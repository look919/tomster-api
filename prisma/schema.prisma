generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  songs Song[]
}

model Song {
  id            String   @id @default(uuid())
  title         String
  youtubeId     String   @unique
  duration      Int
  difficulty    Int      @default(5) // 1-10 scale, where 10 is hardest
  countryOrigin String   @default("international") // e.g., "polish", "english", etc.
  releaseYear   Int
  views         Int      @default(0)
  reportAmount  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  artist        String
  artists       String[] @default([])
  category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId    String
}

